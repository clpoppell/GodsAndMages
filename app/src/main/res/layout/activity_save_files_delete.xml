<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.tadbolmont.homecoming.SavedGamesDisplay"
	tools:layout_editor_absoluteY="81dp"
	tools:layout_editor_absoluteX="0dp">
	
	<Button
		android:id="@+id/deleteSaveOne"
		style="@style/Widget.AppCompat.Button.Colored"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorPrimaryDark"
		android:onClick="onDeleteSaveFileButtonClick"
		android:text="@string/noSave"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveText2"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toBottomOf="@+id/deleteSaveText1"
		app:layout_constraintHorizontal_bias="0.0"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="24dp"/>
	
	<Button
		android:id="@+id/deleteSaveTwo"
		style="@style/Widget.AppCompat.Button.Colored"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorPrimaryDark"
		android:onClick="onDeleteSaveFileButtonClick"
		android:text="@string/noSave"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveText3"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toBottomOf="@+id/deleteSaveText2"
		app:layout_constraintHorizontal_bias="0.0"
		android:layout_marginBottom="24dp"
		android:layout_marginTop="8dp"/>
	
	<Button
		android:id="@+id/deleteSaveThree"
		style="@style/Widget.AppCompat.Button.Colored"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:background="@color/colorPrimaryDark"
		android:onClick="onDeleteSaveFileButtonClick"
		android:text="@string/noSave"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginStart="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toBottomOf="@+id/deleteSaveText3"
		app:layout_constraintHorizontal_bias="0.0"
		android:layout_marginBottom="32dp"
		android:layout_marginTop="8dp"/>
	
	<TextView
		android:id="@+id/deleteSavesTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="32dp"
		android:layout_marginEnd="8dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginStart="8dp"
		android:layout_marginTop="16dp"
		android:text="Select Save File to Delete"
		android:textAlignment="center"
		android:textSize="30sp"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveText1"
		app:layout_constraintHorizontal_bias="0.05"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	
	<TextView
		android:id="@+id/deleteSaveText1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Save File 1"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveOne"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		app:layout_constraintTop_toBottomOf="@+id/deleteSavesTitle"
		app:layout_constraintHorizontal_bias="0.1"/>
	
	<TextView
		android:id="@+id/deleteSaveText2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Save File 2"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveTwo"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginStart="8dp"
		app:layout_constraintTop_toBottomOf="@+id/deleteSaveOne"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.1"/>
	
	<TextView
		android:id="@+id/deleteSaveText3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Save File 3"
		app:layout_constraintBottom_toTopOf="@+id/deleteSaveThree"
		app:layout_constraintTop_toBottomOf="@+id/deleteSaveTwo"
		android:layout_marginLeft="8dp"
		app:layout_constraintLeft_toLeftOf="parent"
		android:layout_marginRight="8dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintHorizontal_bias="0.1"/>

</android.support.constraint.ConstraintLayout>
